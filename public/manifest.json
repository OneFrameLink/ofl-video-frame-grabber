{
    "manifest_version": 2,

    "name": "One Frame Link Transcription Assistant",
    "description": "Extension to assist with transcription for One Frame Link.",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/vendor.js", "js/content_script.js"],
            "all_frames": true
        }
    ],

    "background": {
        "scripts": ["js/vendor.js", "js/background.js"]
    },

    "externally_connectable": {
        "matches": [
            "https://*.oneframelink.com/*"
        ]
    },

    "permissions": [
        "storage",
        "<all_urls>",
        "all_frames"
    ]
}