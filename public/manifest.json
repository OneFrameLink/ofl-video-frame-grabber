{
    "manifest_version": 2,

    "name": "One Frame Link Video Frame Grabber",
    "description": "Allows the programmatic grabbing of frames from video elements (including those loaded in iframes).",
    "version": "1.0",

    "browser_action": {
        "default_icon": {
            "16": "icons/16.png",
            "32": "icons/32.png",
            "64": "icons/64.png"
        }
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/vendor.js", "js/content_script.js"],
            "all_frames": true
        }
    ],

    "background": {
        "scripts": ["js/vendor.js", "js/background.js"]
    },

    "externally_connectable": {
        "matches": [
            "https://*.oneframelink.com/*",
            "https://*.csb.app/*"
        ]
    },

    "permissions": [
        "storage",
        "<all_urls>"
    ]
}